datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Booking {
  id          Int      @id @default(autoincrement())
  clientName  String
  clientEmail String
  date        DateTime
  projectType String
  message     String?
  status      String   @default("pending")
  createdAt   DateTime @default(now())
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  password String
  role     String   @default("influencer") // "admin" or "influencer"
}

